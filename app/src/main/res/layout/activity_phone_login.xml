<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_login_number_input_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:hint="Write phone number here..."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:inputType="phone"
        android:gravity="center"
        android:drawableStart="@drawable/phone"
        android:drawableLeft="@drawable/phone" />

    <EditText
        android:id="@+id/phone_verification_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/phone_login_number_input_et"
        android:background="@drawable/inputs"
        android:padding="5dp"
        android:hint="Write verification code here..."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:inputType="number"
        android:gravity="center"
        android:drawableStart="@drawable/password"
        android:drawableLeft="@drawable/password"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/phone_login_send_verification_code_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/phone_verification_code_et"
        android:background="@drawable/buttons"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center" />

    <Button
        android:id="@+id/phone_login_verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/phone_login_send_verification_code_btn"
        android:background="@drawable/buttons"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="invisible"/>


</RelativeLayout>